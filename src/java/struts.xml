<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <!-- Configuration for the default package. -->
   <package name="default" extends="struts-default">
        <action name="saveUser" class="action.UserAction">
            <result name="success">/success.jsp</result>
             <result name="error">/error.jsp</result>
        </action>
        
        <action name="fetchUsers" class="action.GetData">
        <result name="success">/userList.jsp</result>
    </action>
        

<action name="searchUser" class="action.SearchAction" method="execute">
    <result name="success">/searchResult.jsp</result> <!-- Show the result in this JSP page -->
</action>
    </package>
</struts>
